# Jira MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your Jira instance URL (self-hosted only)
JIRA_MCP_URL=https://jira.yourcompany.com

# Required: API token for authentication
# Generate from: Jira Profile â†’ Personal Access Tokens
JIRA_MCP_TOKEN=your-api-token-here

# Optional: Schema cache TTL in seconds (default: 3600 = 1 hour)
JIRA_MCP_CACHE_TTL=3600

# Optional: HTTP request timeout in seconds (default: 30)
JIRA_MCP_TIMEOUT=30
